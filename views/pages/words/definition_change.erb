<div>
  <div id="definition-form">
    <form action="/word/<%=@word.glob_id%>/change/definition" method="post">
      <input name="_method" type="hidden" value="patch">
      <label for="name">Change Definition</label>
      <div>
        <textarea id='area' type='text' name='update_definition'></textarea>
      </div>
      <button type="submit">Update</button>
    </form>
    <form action="/word/<%=@word.glob_id%>/delete/definition" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit">Delete Definition</button>
    </form>
  </div>
</div>