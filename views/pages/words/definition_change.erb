<div>
  <div id="definition-form">
    <form action="/word/<%=@word.glob_id%>/change" method="post">
      <input name="_method" type="hidden" value="patch">
      <label for="name">Change Definition</label>
      <input id="definition" name="update_definition" type="text">
      <button type="submit">Update</button>
    </form>
    <form action="/word/<%=@word.glob_id%>/delete" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit">Delete Word</button>
    </form>
  </div>
</div>