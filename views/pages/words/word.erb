<h1>Define <%=@word.word%></h1>

<form action="/word/<%=@word.glob_id%>" method="post">
  <input type="text" name="definition_input">
  <button type="submit">Enter Definition</button>
</form>
<div>
  <%if @definitions%>
    <%="Definition: #{@definitions.definition}"%>
  <%end%>
</div>

<a href="/word/<%=@word.glob_id%>/change">Change definition</a>
