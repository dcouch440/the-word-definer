<h1>Change Definition of <%=@word.word%></h1>

<form action="/word/<%=@word.glob_id%>/definition/<%=@definition.id%>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Change Definition</label>
  <input id="definition" name="update_definition" type="text">
  <button type="submit">Update</button>
</form>

<form action="/word/<%=@word.glob_id%>/<%=@definition.id%>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete</button>
</form>